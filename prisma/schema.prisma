generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
  id             String    @id @default(uuid())
  email          String    @unique
  password       String
  name           String?
  role           String    @default("PATIENT")
  phone          String?
  createdAt      DateTime  @default(now())
  
  // Advanced Security Fields
  failedAttempts Int       @default(0)
  lockedUntil    DateTime?
  lastActivity   DateTime? @default(now())

  appointments   Appointment[]
  sentMessages   Message[]     @relation("SentMessages")
  receivedMessages Message[]   @relation("ReceivedMessages")
  auditLogs      AuditLog[]
}

model Appointment {
  id            String   @id @default(uuid())
  dateTime      DateTime
  duration      Int      // 30 or 60
  price         Float
  status        String   @default("BOOKED")
  paymentStatus String   @default("UNPAID")
  paymentMethod String?  // CASH
  notes         String?

  user   User   @relation(fields: [userId], references: [id])
  userId String

  createdAt DateTime @default(now())

  @@unique([dateTime])
}

model Message {
  id        String   @id @default(uuid())
  content   String
  timestamp DateTime @default(now())

  from   User   @relation("SentMessages", fields: [fromId], references: [id])
  fromId String

  to   User   @relation("ReceivedMessages", fields: [toId], references: [id])
  toId String
}

model AuditLog {
  id        String   @id @default(uuid())
  action    String
  details   String?
  timestamp DateTime @default(now())
  ip        String?

  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

model SuperdocStat {
  id           String   @id @default("singleton")
  rating       String   // e.g. "5.0/5"
  reviewsCount String   // e.g. "14"
  updatedAt    DateTime @default(now()) @updatedAt
}

model SuperdocReview {
  id           String   @id @default(uuid())
  textEn       String
  textBg       String
  authorEn     String
  authorBg     String
  sourceUrl    String?
  sourceDate   DateTime?
  rating       Int?     // 1 to 5
  isPublished  Boolean  @default(true)
  createdAt    DateTime @default(now())
  
  @@unique([textBg]) // Avoid duplicates
}
